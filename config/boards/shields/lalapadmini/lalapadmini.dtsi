#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include "lalapadmini-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &lalapadmini_physical_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,0) RC(3,1)         RC(3,3) RC(3,4) RC(3,5) RC(3,6)         RC(3,8) RC(3,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    // Encoders
    left_encoder: left_encoder {
        compatible = "alps,ec11";
        status = "disabled";
    };
    right_encoder: right_encoder {
        compatible = "alps,ec11";
        status = "disabled";
    };
    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <10>;
    };

    // Input Listners - TEMPORARILY DISABLED FOR BLE API TEST
    // split_inputs_R {
    //     #address-cells = <1>;
    //     #size-cells = <0>;

    //     glidepoint_split_R: glidepoint_split_R@0 {
    //         compatible = "zmk,input-split";
    //         reg = <0>;
    //     };
    // };
    // split_inputs_L {
    //     #address-cells = <1>;
    //     #size-cells = <0>;

    //     glidepoint_split_L: glidepoint_split_L@1 {
    //         compatible = "zmk,input-split";
    //         reg = <1>;
    //     };
    // };

    glidepoint_listener_R: glidepoint_listener_R {
        compatible = "zmk,input-listener";
        status = "disabled";
        // device = <&glidepoint_split_R>; // TEMPORARILY DISABLED
    };
    glidepoint_listener_L: glidepoint_listener_L {
        compatible = "zmk,input-listener";
        status = "disabled";
        // device = <&glidepoint_split_L>; // TEMPORARILY DISABLED
    };
};

// SPI
&qspi {
	status = "disabled";
};
&xiao_spi {
    status = "okay";
    cs-gpios = <&gpio1 10 (GPIO_ACTIVE_LOW )>, <&gpio0 13 (GPIO_PULL_UP)>;//dummy

    glidepoint: glidepoint@0 {
        compatible = "cirque,pinnacle";
        status = "okay";
        reg = <0>;
        spi-max-frequency = <1000000>;
        dr-gpios = <&xiao_d 7 (GPIO_ACTIVE_HIGH)>;

        sensitivity = "2x";
        no-taps;
        no-smoothing;
    };
};


